<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>Sign Up / Sign In</title>
    <link rel="stylesheet" href="/style.css" />
  </head>
  <body>
    <nav>
      <div class="container">
        <h1>My Website</h1>
        <ul>
          <li></li>
          <li><a href="#signin" onclick="showSignIn()">Sign In</a></li>
          <li><a href="#signup" onclick="showSignUp()">Sign Up</a></li>
        </ul>
      </div>
    </nav>

    <div class="form-container">
      <div id="signin" class="form-box active">
        <h2>Sign In</h2>
        <form method="post" action="/login">
          <label for="email">Email:</label>
          <input type="email" id="email" name="email" required />

          <label for="password">Password:</label>
          <input type="password" id="password" name="password" required />

          <button type="submit">Sign In</button>
        </form>
      </div>

      <div id="signup" class="form-box">
        <h2>Sign Up</h2>
        <form action="/register" method="post">
          <label for="emailSignup">Email:</label>
          <input type="email" id="emailSignup" name="emailSignup" required />

          <label for="passwordSignup">Password:</label>
          <input
            type="password"
            id="passwordSignup"
            name="passwordSignup"
            required
          />

          <label for="phone">Phone Number:</label>
          <input type="tel" id="phone" name="phone" required />

          <label for="age">Age:</label>
          <input type="number" id="age" name="age" required />

          <button type="submit">Sign Up</button>
        </form>
      </div>
    </div>

    <script src="/script.js"></script>
  </body>
</html>
